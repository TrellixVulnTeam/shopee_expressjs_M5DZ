<div class="grid">
    {{#if products}}
    <div class="container mt-5 p-3 rounded cart">
    <div class="row no-gutters">
        <div class="col-md-12">
            <div class="product-details mr-2">
                <div class="d-flex flex-row align-items-center"><i class="fa fa-long-arrow-left"></i><span class="ml-2">Continue Shopping</span></div>
                <hr>
                <h6 class="mb-0">Shopping cart</h6>
                <div class="d-flex justify-content-between"><span>You have items in your cart</span>
                    <div class="d-flex flex-row align-items-center"><span class="text-black-50">Sort by:</span>
                        <div class="price ml-2"><span class="mr-1">price</span><i class="fa fa-angle-down"></i></div>
                    </div>
                </div>
                {{#each products}}
                <div class="d-flex justify-content-between align-items-center mt-3 p-2 items rounded">
                    <div class="d-flex flex-row align-items-center"><img class="rounded" src="{{this.item.img}}" width="40">
                        <div class="ml-2"><span class="font-weight-bold d-block ">{{this.item.description}}</span></div>
                    </div>
                    <div class="action-qty">
                        <a href="/carts/reduce/{{this.item._id}}"><i class="fa-solid fa-minus action-qty__icon"></i></a>
                        <span class="d-block action-qty__number align-items-center">{{this.qty}}</span>
                        <a href="/carts/addOne/{{this.item._id}}"><i class="fa-solid fa-plus action-qty__icon"></i></a>
                    </div>
                    <div class="action-qty__clear">
                        <a href="/carts/removeAll/{{this.item._id}}">Clear</a>   
                    </div>
                    <div class="d-flex flex-row align-items-center">

                        <span class="d-block ml-5 font-weight-bold">${{this.price}}</span>
                        <i class="fa fa-trash-o ml-3 text-black-50"></i>
                    </div>
                </div>
                {{/each}}
            </div>
            <a href="/carts/checkout" class="btn btn-primary btn-block d-flex justify-content-between mt-3" type="button"><span>${{totalPrice}}</span><span>Checkout<i class="fa fa-long-arrow-right ml-1"></i></span></a>
        </div>
